# AfriContext Intelligence Platform Environment Variables

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_MCP_SERVER_URL=https://your-mcp-server.netlify.app

# API Keys (Replace with your actual keys)
NEXT_PUBLIC_WEATHER_API_KEY=your_openweathermap_api_key
NEXT_PUBLIC_MARKET_API_KEY=your_market_data_api_key
NEXT_PUBLIC_BORDER_API_KEY=your_border_data_api_key
NEXT_PUBLIC_AI_API_KEY=your_openai_api_key

# SMS Gateway Configuration
SMS_GATEWAY_URL=https://api.sms-gateway.com
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=AFRICONTEXT

# USSD Configuration
USSD_SERVICE_CODE=*123#
USSD_PROVIDER_URL=https://api.ussd-provider.com
USSD_API_KEY=your_ussd_api_key

# Voice Chat Configuration
VOICE_API_KEY=your_voice_api_key
VOICE_LANGUAGE=en-US
VOICE_REGION=us-east-1

# Database Configuration (Optional)
DATABASE_URL=postgresql://username:password@localhost:5432/africontext
REDIS_URL=redis://localhost:6379

# Netlify Configuration
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_ACCESS_TOKEN=your_netlify_access_token

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AfriContext Intelligence

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token
